<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingVertical="20dp"
    android:paddingHorizontal="30dp"
    tools:context=".AddTaskActivity">

    <EditText
        android:id="@+id/newTaskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:fontFamily="casual"
        android:hint="@string/add_task_title_hint"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/newTaskDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="casual"
        android:hint="@string/add_task_description_hint"
        android:scrollbarSize="5dp"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginVertical="10dp"
        android:paddingVertical="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="casual"
            android:text="@string/add_task_state"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8" />

        <Button
            android:id="@+id/selectStateButton"
            android:onClick="onClickStateButton"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="113dp"
            android:layout_height="42dp"
            android:fontFamily="casual"
            android:text="@string/state_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:layout_constraintVertical_bias="0.454" />

        <Button
            android:id="@+id/addTasKButton"
            android:onClick="onClickAddTaskButton"
            android:layout_width="33dp"
            android:layout_height="40dp"
            android:layout_marginStart="28dp"
            android:background="@mipmap/edit_task_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/selectStateButton"
            app:layout_constraintTop_toTopOf="@+id/selectStateButton"
            app:layout_constraintVertical_bias="0.666" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>